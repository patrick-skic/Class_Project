<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/goole"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="230dp"
        app:srcCompat="@drawable/google" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/userName1"
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="10dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/singInButton"
        android:layout_width="226dp"
        android:layout_height="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="430dp"
        android:layout_marginStart="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="flat"
        android:clickable="true">

        <TextView
            android:id="@+id/singin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginStart="40dp"
            android:text="Sign_In"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="15dp"
            android:translationY="20dp" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="337dp">

        <EditText
            android:id="@+id/Password"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="0dp" />
    </soup.neumorphism.NeumorphCardView>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="170dp"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/twitter"

        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="290dp"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="241dp"
        android:layout_height="195dp"
        android:translationX="80dp"
        android:translationY="10dp"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="68dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="ECCLIPSE"
        android:layout_marginStart="150dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="650dp"/>



    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="645dp"
        android:clickable="true"
        android:text="Sing_Up"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        />


</RelativeLayout>