<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">


    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/First_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="10dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/Second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Second name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="10dp" />

    </soup.neumorphism.NeumorphCardView>
    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="10dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed">

        <EditText
            android:id="@+id/phone_nber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="10dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="242dp"
        android:layout_height="90dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="595dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="flat">

        <TextView
            android:id="@+id/singnup_button"
            android:layout_width="160dp"
            android:layout_height="41dp"
            android:paddingLeft="10dp"
            android:text="Sign_up"
            android:textAlignment="center"
            android:paddingStart="40dp"
            android:textColor="#232323"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="15dp"
            android:translationY="20dp" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="384dp"
        android:layout_height="83dp"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="520dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowColorDark="#B3ACAC"
        app:neumorph_shadowColorLight="#F4F4F4"
        app:neumorph_shapeType="pressed"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="337dp">

        <EditText
            android:id="@+id/password1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#CDB5B5"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="0dp" />
    </soup.neumorphism.NeumorphCardView>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="218dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:translationX="80dp"
        android:translationY="10dp"
        app:srcCompat="@drawable/number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="68dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="ECCLIPSE"
        android:layout_marginStart="150dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="already have an account?"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="700dp"/>

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="697dp"
        android:text="Sing_in"
        android:textColor="@color/teal_700"
        android:clickable="true"
        android:textSize="20dp"/>



</RelativeLayout>